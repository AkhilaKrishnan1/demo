<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="doctor_form_view" model="ir.ui.view">
        <field name="name">doctor.form.view</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button-box" name="button_box">
                        <button name="action_smart_appointment" type="object" class="oe_start_button" icon="fa-bars">
                            <field name="appointment_count" class="o_start_value" string="Appointment"/>
                            <span>Appointment</span>
                        </button>
                    </div>
                    <h1>
                        <field name="doctor_id" nolabel="1"/>
                    </h1>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="education_ids" widget="many2many_tags"/>
                        <field name="license"/>
                        <field name="speciality_ids" widget="many2one_tags"/>
                        <field name="consultation_id" widget="many2one_tags"/>
                        <field name="gender"/>
                        <field name="hospital_ids" widget="many2many_tags"/>
                        <field name="patient_count"/>
                    </group>
                    <notebook>
                        <page string="Address" name="address">
                            <form>
                                <sheet>
                                    <group>
                                        <field name="address" placeholder="Street..."
                                               style="position:absolute;left:130px;width:387px;"/>
                                        <div class="o_address_format">
                                            <field name="street2" placeholder="Street 2..." class="o_address_street"
                                                   style="width:487px;"/>
                                            <field name="city" placeholder="City" class="o_address_city"
                                                   style="width:150px;"/>
                                            <field name="state_ids" class="o_address_state" placeholder="State"
                                                   style="position:absolute;left:200px;width:150px;"
                                                   options="{'no_open': True, 'no_quick_create': True}"
                                                   context="{'country_ids': country_ids, 'default_country_ids': country_ids, 'zip': zip}"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip"
                                                   style="position:absolute;left:370px;width:150px;"/>
                                            <field name="country_ids" placeholder="Country" class="o_address_country"
                                                   style="width:490px;"
                                                   options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                    </group>
                                </sheet>
                            </form>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_item_tree" model="ir.ui.view">
        <field name="name">doctor_item_tree</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="doctor_id"/>
                <field name="name"/>
                <field name="hospital_ids"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="doctor_item_kanban" model="ir.ui.view">
        <field name="name">doctor_item_kanban</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="speciality_ids"/>
                <template>
                    <t t-name="kanban-box">
                        <div t-att-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('doctor.details','image',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="oe_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Speciality:
                                        <field name="speciality_ids"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>
    </record>


    <record id="menu_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doctor.details</field>
        <field name="view_mode">tree,form,kanban</field>
