<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="paperformat_patient_custom" model="report.paperformat">
        <field name="name">Patient Report</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <record id="patient_detail_reports" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">patient.details</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">doctor_detail.patient_report</field>
        <field name="report_file">doctor_detail.patient_report</field>
        <field name="binding_model_id" ref="model_patient_details"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="doctor_detail.paperformat_patient_custom"/>

    </record>
</odoo>
