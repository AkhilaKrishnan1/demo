<odoo>
    <template id="patient_report">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <h4 style="text-align:center;top:0px;">
                            <b>
                                <u>PATIENT REPORT</u>
                            </b>
                        </h4>
                        <div>
                            <img t-if="not o.image"
                                 t-att-src="'/base/static/img/avatar_grey.png'" height="140"
                                 border="1" width="120"/>
                            <img t-if="o.image"
                                 t-att-src="image_data_uri(o.image)"
                                 height="140" border="1" width="120"/>
                        </div>
                        <div>
                            <table class="table table-bordered mt32" name="patient"
                                   style="position:absolute;top:200px;">
                                <thead>
                                    <tr>
                                        <th name="th_code" class="text-left">
                                            <span>Code</span>
                                        </th>
                                        <th name="th_name" class="text_left">
                                            <span>Name</span>
                                        </th>
                                        <th name="th_dob" class="text_left">
                                            <span>Date Of Birth</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tr>
                                    <td>
                                        <span t-field="o.code_id"/>
                                    </td>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.dob"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
